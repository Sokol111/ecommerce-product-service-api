{
  "type": "record",
  "name": "ProductCreatedEvent",
  "namespace": "com.ecommerce.events.product",
  "doc": "Event emitted when a new product is created",
  "fields": [
    {
      "type": "record",
      "name": "EventMetadata",
      "namespace": "com.ecommerce.events",
      "doc": "Common event metadata used by all domain events. Contains technical/observability fields separate from business payload.",
      "fields": [
        {
          "name": "event_id",
          "type": "string",
          "doc": "Unique event identifier (UUID)"
        },
        {
          "name": "event_type",
          "type": "string",
          "doc": "Type of the event (e.g., ProductCreated, ProductUpdated)"
        },
        {
          "name": "source",
          "type": "string",
          "doc": "Source service that produced the event"
        },
        {
          "name": "timestamp",
          "type": {
            "type": "long",
            "logicalType": "timestamp-millis"
          },
          "doc": "Event creation timestamp in milliseconds since epoch"
        },
        {
          "name": "trace_id",
          "type": [
            "null",
            "string"
          ],
          "default": null,
          "doc": "OpenTelemetry trace ID for distributed tracing"
        },
        {
          "name": "correlation_id",
          "type": [
            "null",
            "string"
          ],
          "default": null,
          "doc": "Correlation ID for request tracking across services"
        }
      ]
    },
    {
      "name": "payload",
      "type": {
        "type": "record",
        "name": "ProductCreatedPayload",
        "doc": "Business data for product creation event",
        "fields": [
          {
            "name": "product_id",
            "type": "string",
            "doc": "Unique product identifier (UUID)"
          },
          {
            "name": "name",
            "type": "string",
            "doc": "Product name"
          },
          {
            "name": "price",
            "type": "float",
            "doc": "Product price"
          },
          {
            "name": "quantity",
            "type": "int",
            "doc": "Available quantity"
          },
          {
            "name": "image_id",
            "type": [
              "null",
              "string"
            ],
            "default": null,
            "doc": "Optional image identifier"
          },
          {
            "name": "enabled",
            "type": "boolean",
            "doc": "Whether the product is enabled"
          },
          {
            "name": "version",
            "type": "int",
            "doc": "Entity version for optimistic locking"
          },
          {
            "name": "created_at",
            "type": {
              "type": "long",
              "logicalType": "timestamp-millis"
            },
            "doc": "Product creation timestamp"
          },
          {
            "name": "modified_at",
            "type": {
              "type": "long",
              "logicalType": "timestamp-millis"
            },
            "doc": "Product last modification timestamp"
          }
        ]
      },
      "doc": "Product business data at the time of creation"
    }
  ]
}
